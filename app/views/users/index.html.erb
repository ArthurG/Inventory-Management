<% provide(:title, "Company Directory") %>

<div class = "row">
	<h1>Company Directory</h1>
	<table class = "table table-hover">
		<tr>
			<th>User Email</th>
			<th>User Type</th>		
			<% if current_user.user_type == "HR Manager" || 
				current_user.user_type == "Owner" %>
				<th>Edit User</th>	
				<th>Delete User</th>
			<% end %>
		</tr>

		<!-- Render yourself -->
		<tr class = "active">
			<td><%= current_user.email %></td>
			<td><%= current_user.user_type %></td>
			<% if current_user.user_type == "Owner" || 
				current_user.user_type == "HR Manager" %>
				<td><%= link_to "Edit", edit_user_path(current_user), class: "btn btn-default" %></td>
				<td><%= link_to "Delete", user_path(current_user), method: :delete, class: "btn btn-default" %></td>
			<% end %>
		</tr>

		<!-- Render other users -->
		<%= render @users %>
	</table>


	<%= will_paginate %>
</div>